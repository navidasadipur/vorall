@model SpadStorePanel.Web.ViewModels.EditCustomerViewModel
@{
    ViewBag.Title = "ویرایش پروفایل";
}
<input type="hidden" id="nav_active" value="editprofile">
<input type="hidden" id="nav_item_active" value="editprofile">
@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            <strong>خطا!</strong> @ViewBag.Message
        </div>
    }
}
<div class="col-lg-12">
    <div class="card card-custom gutter-b">
        <div class="card-header">
            <h3 class="card-title">
                ویرایش پروفایل
            </h3>
        </div>
        @using (Html.BeginForm("EditMyProfile", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UserId)
                @Html.HiddenFor(model => model.CustomerId)
                @Html.HiddenFor(model => model.Avatar)
                @Html.HiddenFor(model => model.UserName)
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NationalCode, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NationalCode, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.NationalCode, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNumber, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.GeoDivisionId, "محل سکونت", new { })
                            <div class="col-md-10">
                                @Html.DropDownList("GeoDivisionId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GeoDivisionId, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PostalCode, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control ", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "form-text text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4" style="margin-bottom: 10px">
                        <div class="form-group">
                            <label class="col-label">تصویر</label>
                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <div class="image-input image-input-outline" id="user-avatar">
                                    <div class="image-input-wrapper" style="background-image: url(/Files/UserAvatars/Image/@Model.Avatar)"></div>

                                    <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="آپلود تصویر">
                                        <i class="fa fa-pen icon-sm text-muted"></i>
                                        <input type="file" name="UserAvatar" id="UserAvatar" />
                                        <input type="hidden" name="user-avatar_remove" />
                                    </label>

                                    <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="حذف تصویر">
                                        <i class="ki ki-bold-close icon-xs text-muted"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <a href="javascript:void(0)" class="btn btn-success" onclick="btnResetPassword('@Model.UserId')">بروزرسانی رمز عبور</a>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Address, new { })
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "form-text text-danger" })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Index","Dashboard")" class="btn btn-secondary">انصراف</a>
                <input type="submit" value="ثبت" class="btn btn-primary mr-2" />
            </div>
        }
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="myModalHeader">
                <h5 class="modal-title" id="myModalLabel">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body" id="myModalBody">
                ...
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        new KTImageInput('user-avatar');
    </script>
    <script>
        function btnResetPassword(id) {
            $.get("/Customer/Dashboard/ResetMyPassword/" + id, function (result) {
                $("#myModal").modal();
                $("#myModalLabel").html("بروزرسانی رمز عبور");
                $("#myModalHeader");
                $("#myModalBody").html(result);
            });
        }
    </script>
}