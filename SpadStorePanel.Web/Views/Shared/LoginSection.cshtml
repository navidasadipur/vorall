@model SpadStorePanel.Web.ViewModels.LoginViewModel
@using Microsoft.AspNet.Identity

@if (User.Identity.GetUserName() != "")
{
    <span>@User.Identity.GetUserName()</span>
    using (Html.BeginForm("LogOff", "Auth", new { area = "Customer" }, FormMethod.Post, null))
    {
        <button type="submit" class="btn text-white btn-block btn-sm" style="background-color:red;">خروج</button>
    }
}
else if (Model.Error != null)
{
    <span style="background-color:red; width: 100px">@Model.Error</span>
    <a href="#test-popup1" ifass="open-popup-link">ورود</a>
}
else
{
<a href="#test-popup1" class="open-popup-link">ورود</a>
}

<div id="test-popup1" class="white-popup lr-popup mfp-hide text-center">
    <h4>ورود</h4>
    @using (Html.BeginForm("Login", "Auth", new { area = "Customer" }, FormMethod.Post, new { @class = "subscribe-popup-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(x => x.UserName, null, new { @name = "email", @type = "email", @placeholder = "ایمیل خود را وارد کنید" })
        @Html.TextBoxFor(x => x.Password, null, new { @name = "password", @type = "password", @placeholder = "رمز عبور خود را وارد کنید" })
        <div class="form-check text-left">
            <label>
                مرا بخاطر بسپار
                @Html.CheckBoxFor(x => x.RememberMe, new { @class = "defult-check", @type = "checkbox", @checked = "checked" })
                <span class="checkmark"></span>
            </label>
            <a href="#" class="forgot-password float-right">رمز عبور را فر اموش کرده‌اید؟</a>
        </div>
        <button class="btn btn-primary float-right" title="Login" type="submit">
            ورود
        </button>
    }
