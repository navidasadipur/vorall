                            {

                                using (Html.BeginForm("LogOff", "Auth", new { area = "Customer" }, FormMethod.Post, null))
                                {
                                <div class="col-md-12">
                                    <span style="color:white;">@User.Identity.GetUserName()</span>
                                    <button type="submit" class="btn text-white  btn-sm d-inline" style="background-color:red;">خروج</button>
